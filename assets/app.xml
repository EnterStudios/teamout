<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Hangjoy">
		<Require feature="rpc" />
		<Require feature="views" />
		<Require feature="locked-domain" />
	</ModulePrefs>
	<Content type="html"><![CDATA[
<!DOCTYPE html>
<html style="height: 100%" lang="en">
  <head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="//jamesflorentino.github.io/nanoScrollerJS/css/nanoscroller.css" rel="stylesheet">
    <link href="//hangjoy.herokuapp.com/assets/css/application.css?1" rel="stylesheet">
  </head>
  <body style="height: 100%">
    <ul class="nav nav-tabs menubar">
      <li class="active"><a href="#participants" data-toggle="tab"><span class="glyphicon glyphicon-user"></span></a></li>
      <!-- <li><a href="#chat" data-toggle="tab"><span class="glyphicon glyphicon-list"></span></a></li> -->
      <li><a href="#settings" data-toggle="tab"><span class="glyphicon glyphicon-cog"></span></a></li>
<!--       <li class="dropdown">
        <a href="#" id="rooms" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th"></span></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="rooms">
          <li><a href="#room-architecture" tabindex="-1" data-toggle="tab">@architecture</a></li>
          <li><a href="#room-operations" tabindex="-1" data-toggle="tab">@operations</a></li>
        </ul>
      </li> -->
    </ul>
    <button type="button" class="btn btn-danger btn-leave">Leave Chat</button>

    <div class="tab-content">
      <div class="tab-pane active nano" id="participants">
        <div class="nano-content">
          <div class="hanging_with">
            <span class="title glyphicon glyphicon-facetime-video"></span>
            <ul class="participants-hanging list-group">
            </ul>
            <div class="actions">
              <a href="#" id="participants-more" class="dropdown-toggle" data-toggle="dropdown"><span class="expand glyphicon glyphicon-list"></span></a>
              <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="participants-more">
              </ul>
            </div>
          </div>
          <div class="alert alert-info participants-empty">
            <span class="glyphicon glyphicon-user"></span>
            <span class="caption">There are no other participants in the hangout.</span>
          </div>
          <ul class="participants list-group">
          </ul>
        </div>
      </div>
      <div class="tab-pane nano" id="chat">
        <div class="nano-content">
          Integrate Flowdock here.
        </div>
      </div>
      <div class="tab-pane" id="settings">
        <div class="nano-content">
          <form role="form">
            <div class="form-group setting-autostart checkbox">
              <label>
                <input type="checkbox"> Auto-start when hangout begins
              </label>
            </div>
            <div class="form-group setting-sounds checkbox">
              <label>
                <input type="checkbox"> Mute sounds
              </label>
            </div>
            <div class="form-group setting-notifications checkbox">
              <label>
                <input type="checkbox"> Use desktop notifications
              </label>
            </div>
            <div class="form-group setting-photos_enabled checkbox">
              <label>
                <input type="checkbox"> Periodically take a photo to show presence
              </label>
            </div>
            <div class="form-group setting-photos_interval">
              <label>Photo interval (minutes)</label>
              <select class="form-control">
                <option value="1">1m</option>
                <option value="2">2m</option>
                <option value="3">3m</option>
                <option value="4">4m</option>
                <option value="5">5m</option>
              </select>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="//jamesflorentino.github.io/nanoScrollerJS/javascripts/jquery.nanoscroller.js"></script>
    <script type="text/javascript" src="//hangjoy.herokuapp.com/assets/js/application.js?1"></script>
  </body>
]]>
</Content>
</Module>